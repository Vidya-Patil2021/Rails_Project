<div id="page-content">
  <h1 class="text-center mt-4">Categories</h1><br>
  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
  <br>
  <% @categories.each do |art| %>
  <div class="row justify-content-md-center">
    <div class="col-4 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title"><%= link_to art.name,category_path(art), class: "text-success" %></h5>
          <p class="card-text "><%= pluralize(art.articles.count, "articles") %></p>
        </div>
      </div>
    </div>
  </div>
  <%end%>
  <div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
  </div>
